---
export interface Props {
	title: string;
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/ico" href="/index.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta
			name="description"
			content="Olá nós somos uma equipe de cuidador de idosos localizada no Rio de Janeiro - há mais de 20 anos disponibilizando serviços de forma humanizada e personalizada em todo Rio de Janeiro - RJ. (21) 3540-2249 | (21) 3101-2541 | (21) 9 9582-5518"
		/>
		<meta
			name="keywords"
			content="dedicar, equipe, cuidadores, idoso, acompanhantes, rio de janeiro, rj, alzheimer, home-care, enfermagem"
		/>
	</head>
	<body>
		<slot />
		<style is:global>
			@font-face {
				font-family: "IBM Plex";
				src: url("/fonts/IBMPlexSans-Regular.woff2") format('woff2');
				font-display: swap;
			}

			html {
				scroll-behavior: smooth;
				font-family: "IBM Plex", 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
			}

			*::-webkit-scrollbar {
				width: 8px;
			}

			*::-webkit-scrollbar-track {
				border-radius: 8px;
			}

			*::-webkit-scrollbar-thumb {
				height: 56px;
				border-radius: 8px;
				border: 2px solid transparent;
				background-clip: content-box;
				background-color: #64d9f7;
			}

			*::-webkit-scrollbar-thumb:hover {
				background-color: #00b0f2;
			}

			html {
				width: 100%;
				height: 100%;
				color: white;
				background-color: #3b3e99;
			}

			canvas {
				position: fixed !important;
			}

			.container-vanta {
				@apply w-full fixed;
			}

			.container-default {
				@apply mx-auto flex flex-col items-center gap-4 px-2 md:px-4;
				max-width: 1200px;
			}

			.link-project {
				@apply underline;
				color: inherit;
			}

			.link-project:hover {
				@apply underline;
				color: #ead41c;
			}
		</style>
	</body>
</html>
